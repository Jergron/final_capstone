@model IEnumerable<DripScript.Models.DSUser>
@{
    Layout = "~/Views/Shared/_DripScriptLayout.cshtml";
}
<div ng-controller="TestController">

    <div class="profile container">
        <div class="row">
            <div class="form col-md-4">
                <input ng-model="first" class="form-control" id="first" type="text" placeholder="First Name" />
                <br />
                <input ng-model="last" class="form-control" id="last" type="text" placeholder="Last Name" />
            </div>
            <div class="col-md-4">
                <img style="width:100%;height:100%" src="http://place-hoff.com/220/155" />
                <input type="file" />
                <br />
                <button ng-click="update()">Update Profile</button>                                                
            </div>
            <div class="col-md-4">
                <textarea ng-model="about" id="about" class="form-control" placeholder="Write About Yourself"></textarea>
            </div>
        </div>
    </div>
</div>